<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Unity를 렌더링할 컨테이너. Unity가 실행되는 동안 전체 화면을 차지합니다 -->
    <FrameLayout
        android:id="@+id/unityContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 앱 UI 컨트롤 오버레이: Unity가 실행 중에도 화면 구석에 고정됩니다 -->
    <LinearLayout
        android:id="@+id/overlayControls"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/overlay_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/btnStartUnity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unity 실행" />

        <Button
            android:id="@+id/btnSendToUnity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unity로 메시지 보내기"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상태: 대기중"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
